<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
        http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>make-assembly</id>
    <formats>
        <!--打包的目的文件的格式-->
        <format>zip</format>
    </formats>
    <!--引入基本的文件夹-->
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!--引入的文件设置-->
        <fileSet>
            <directory>src/main/resouses</directory>
            <outputDirectory>/resources</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>/</directory>
            <includes>
                <include>TestMQ.puml</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/</directory>
            <includes>
                <include>test-1.0-SNAPSHOT.jar</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!--<dependencySet>-->
            <!--&lt;!&ndash;是否使用项目原本生成的jar&ndash;&gt;-->
            <!--&lt;!&ndash;<useProjectAttachments>true</useProjectAttachments>&ndash;&gt;-->
            <!--<useProjectArtifact>true</useProjectArtifact>-->
            <!--<unpack>true</unpack>-->
            <!--<outputDirectory>/</outputDirectory>-->
            <!--&lt;!&ndash;依赖的jar包是否解压，解压之后才能使用？&ndash;&gt;-->
            <!--&lt;!&ndash;<unpack>false</unpack>&ndash;&gt;-->
            <!--<scope>runtime</scope>-->
            <!--<includes>-->
                <!--<include>xiao:test:jar:1.0:SNAPSHOT</include>-->
            <!--</includes>-->
        <!--</dependencySet>-->
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>xiao:test:jar:1.0-SNAPSHOT</exclude>
            </excludes>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>